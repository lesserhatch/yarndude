<%= form_for [:admin, yarn] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, {'class' => 'form-control', 'placeholder' => 'Yarn Name'} %>
  </div>
  <div class="form-group">
    <%= f.label :short_name %>
    <%= f.text_field :short_name, {'class' => 'form-control', 'placeholder' => 'Short Name'} %>
  </div>
  <div class="form-group">
    <%= f.label :color %>
    <%= f.text_field :color, {'class' => 'form-control', 'maxlength' => 7 } %>
  </div>
  <div class="form-group">
    <%= f.submit nil, {'class' => 'btn btn-primary'} %>
  </div>
<% end %>